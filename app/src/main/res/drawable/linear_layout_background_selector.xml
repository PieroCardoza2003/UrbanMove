<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="50dp" android:color="@android:color/holo_red_dark"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="40dp" android:topRightRadius="40dp" android:bottomRightRadius="40dp" android:bottomLeftRadius="40dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="3dp" android:color="@android:color/darker_gray"/>
        </shape>
    </item>
</selector>
