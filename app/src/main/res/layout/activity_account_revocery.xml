<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.otpverification.OtpVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Recupera tu cuenta"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:text="Introduce tu correo electrÃ³nico para buscar tu cuenta"/>

        <EditText
            android:id="@+id/emailreco"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:hint="Example@email.com"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirmmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Verificar"
            android:backgroundTint="@color/app_color_primary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="18dp"
            android:layout_marginTop="32sp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/cancelreco"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="@color/app_color_gray"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="18dp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"/>
    </LinearLayout>

</ScrollView>