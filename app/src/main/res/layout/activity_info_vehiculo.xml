<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tes_components.InfoVehiculoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Información del vehículo"
            android:textSize="23dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNumeroPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de placa"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:padding="20dp"
            android:inputType="none"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ 1234567890 -@_"
            android:maxLength="7"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg"
            />

        <TextView
            android:id="@+id/tvMarcaVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona la marca"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:padding="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg"
            />

        <TextView
            android:id="@+id/tvModeloVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modelo del vehículo"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:padding="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg"
            />

        <TextView
            android:id="@+id/tvColorVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color del vehículo"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:padding="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg" />

        <Button
            android:id="@+id/btnAceptarInfoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:textSize="19sp"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:backgroundTint="@color/app_color_primary"
            />
    </LinearLayout>



</LinearLayout>