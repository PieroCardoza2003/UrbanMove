<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.phonelogin.PhoneLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon_app_red"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Inicie sesión con su número de teléfono"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"/>

        <com.hbb20.CountryCodePicker
            android:id="@+id/country_picker"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corner"
            app:ccp_defaultNameCode="PE"
            app:ccp_showFlag="true"
            app:ccp_showFullName="true"
            app:ccp_showPhoneCode="false"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/country_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:text="+51" />
            <EditText
                android:id="@+id/teléfono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="phone"
                android:textColor="@color/black"
                android:background="@color/white"
                android:hint="Número de Teléfono"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btngetOTP"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Siguiente"
                android:backgroundTint="@color/app_color_primary"
                android:textColor="@color/white"
                android:padding="18dp"
                android:layout_marginTop="32sp"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>