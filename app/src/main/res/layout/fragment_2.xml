<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:color="@color/white"
    android:layout_marginTop="48dp"
    tools:context=".presentation.ui.map.Funcion.fragment_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="-90dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_remove_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="-6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_close_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="16dp"
                android:text="Seleccione una o más opciones de transporte"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangular_button"
                android:text="Colectivo"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="86dp"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangular_button"
                android:text="Microbus"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="86dp"
                android:textColor="@android:color/white"
                android:background="@drawable/rectangular_button"
                android:text="Combi"
                android:textSize="16sp" />

            <!-- Botón de continuar -->
            <Button
                android:id="@+id/button_continuar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="106dp"
                android:backgroundTint="@color/app_color_primary"
                android:text="Continuar"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
