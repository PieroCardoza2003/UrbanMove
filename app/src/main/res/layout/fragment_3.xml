<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:color="@color/white"
    android:layout_marginTop="510dp"
    tools:context=".presentation.ui.map.Funcion.fragment_3">

    <!-- Contenedor principal que alinea el contenido hacia la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_remove_24" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="-26dp"
        android:layout_marginEnd="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_close_25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Seleccione la trayectoria del transporte"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Contenedor horizontal para los botones de Ida y Vuelta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/toggleLinearLayout"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/linear_layout_background_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ida" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toggleLinearLayout1"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/linear_layout_background_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vuelta" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botón para iniciar búsqueda -->
    <Button
        android:id="@+id/button_iniciar_busqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_color_primary"
        android:text="Iniciar búsqueda"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>
    </FrameLayout>
