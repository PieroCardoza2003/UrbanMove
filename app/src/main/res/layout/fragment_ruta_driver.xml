<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".presentation.ui.home_user.conductor.mapview.bottomshet.rutaDriverFragment">

    <View
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:background="@drawable/border_radius"
        android:backgroundTint="@color/app_color_primary"/>

    <TextView
        android:id="@+id/textview_mensaje_bienvenida"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Hola, ¿Qué ruta realizarás?"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_letra_ruta"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Letra ruta"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="2dp">
            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/bg_btn_border_unselected"
                android:id="@+id/edittext_letra_ruta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="0dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_unidad"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Unidad"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeWidth="2dp">
            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/bg_btn_border_unselected"
                android:id="@+id/edittext_unidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btn_ida"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:background="@drawable/bg_btn_border_selected"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/app_color_primary"
                android:src="@drawable/icon_arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Ida   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/btn_vuelta"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:background="@drawable/bg_btn_border_unselected"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/app_color_primary"
                android:src="@drawable/icon_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Vuelta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_iniciar_ruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar ruta"
        android:backgroundTint="@color/app_color_primary"
        android:textColor="@color/white"
        android:padding="18dp"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_alcance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar alcance de busqueda"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="18sp" />



    </LinearLayout>